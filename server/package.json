{
  "name": "where-server",
  "version": "1.0.0",
  "description": "Backend server for Where Android app - live tracking visualization",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot run index.ts",
    "start": "bun --watch run index.ts",
    "build": "bun build src/public/app.ts --outfile=src/public/app.js --target=browser --minify",
    "test": "bun test",
    "test:unit": "bun test tests/store.test.ts tests/track.test.ts",
    "test:api": "bun test tests/api.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "gps",
    "tracking",
    "norway",
    "maplibre",
    "websocket"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "bun-types": "^1.3.5",
    "jest": "^30.2.0",
    "typescript": "^5.0.0"
  }
}
